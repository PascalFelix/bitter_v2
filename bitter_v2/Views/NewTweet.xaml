<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bitter_v2.Views.NewTweet">
    <ContentView.Content>

        <Frame CornerRadius="30"  
                OutlineColor="White" 
                 Padding="0">

            <StackLayout>
                <Label BackgroundColor="#03A9F4" Text="       Neuer Tweet" HorizontalOptions="FillAndExpand" />
                <StackLayout Padding="5" HorizontalOptions="FillAndExpand" HeightRequest="150" >
                    <Editor  HorizontalOptions="Fill"
                            HeightRequest="100"
                            x:Name="tweetInput" 
                            Text="{Binding NewTweetString}" 
                            Placeholder="Neuen Tweet eingeben"
                            Grid.Column="1" 
                            Grid.Row="1">
                    </Editor>
                    <Button Clicked="Button_Clicked" Text="Tweeten" BackgroundColor="LightBlue" HorizontalOptions="EndAndExpand"/>
                </StackLayout>
            </StackLayout>

 
        </Frame>

    </ContentView.Content>
</ContentView>